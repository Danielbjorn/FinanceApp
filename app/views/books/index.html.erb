

<p id="notice"><%= notice %></p> <!-- not sure what this is might delete (probably notice banner) -->


<% if user_signed_in? %>

  <table class = "table">

    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Rating</th>
        <th>Review</th>
        <th>user id</th>

        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.rating %></td>
          <td><%= book.review %></td>
          <td><%= book.user_id %></td>
          <td><%= link_to 'Show', book %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>

  </table>

<% else %>

  <h1>You need to log in to view the books</h1> <!--  THIS SHOULD BE A NOT LOGGED IN PAGE FOR BOOKS -->

<% end %>

<br>


<% if user_signed_in? %>
  <%= link_to 'New Book', new_book_path %>
<% end %>
