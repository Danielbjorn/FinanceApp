


<h1 class = "Devise-head">Log in</h1> <br> <br>

<div class = "Devise-container">
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


    <div class="field">
      
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'E-mail', class: "field-item" %>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password',class: "field-item" %> <br>

    <% if devise_mapping.rememberable? %>
     
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, id: "remember-me" %> <br>

    <% end %>

   
      <%= f.submit "Log in", id: "Sign-up-btn", class: "field-item" %>
    

  <% end %>



</div>